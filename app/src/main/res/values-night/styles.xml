<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">#313335</item>
        <item name="colorOnSurface">#BAB9AA</item>
        <item name="android:textSize">18sp</item>
        <!--<item name="buttonBarButtonStyle">@style/MyDialogButtonTheme</item>-->
        <item name="buttonBarPositiveButtonStyle">@style/MyDialogButtonTheme</item>
        <item name="buttonBarNegativeButtonStyle">@style/MyDialogButtonTheme</item>
        <item name="buttonBarNeutralButtonStyle">@style/MyDialogButtonTheme</item>
    </style>

    <style name="MyDialogButtonTheme" parent="@style/Widget.MaterialComponents.Button">
        <!-- text color for the button -->
        <item name="android:textColor">#03DAC5</item>
        <!-- Background tint for the button -->
        <item name="backgroundTint">#03DAC5</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>